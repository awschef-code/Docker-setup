<settings
    xmlns="http://maven.apache.org/SETTINGS/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http:/maven.apache.org/SETTINGS/1.0.0 
        http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<profiles>
		<profile>
			<id>agility</id>
			<repositories>
		        <repository>
		          <id>archiva</id>
		          <name>Archiva Artifacts</name>
		          <releases>
		            <enabled>true</enabled>
		            <updatePolicy>always</updatePolicy>
		            <checksumPolicy>warn</checksumPolicy>
		          </releases>
		          <snapshots>
		            <enabled>true</enabled>
		            <updatePolicy>always</updatePolicy>
		            <checksumPolicy>warn</checksumPolicy>
		          </snapshots>
		          <url>http://${env.ARCHIVA_PORT_8080_TCP_ADDR}:${env.ARCHIVA_PORT_8080_TCP_PORT}/repository/agility</url>
		          <layout>default</layout>
		        </repository>
		        <repository>
		          <id>extensions</id>
		          <name>Agility Custom Adapters</name>
		          <releases>
		            <enabled>true</enabled>
		            <updatePolicy>always</updatePolicy>
		            <checksumPolicy>warn</checksumPolicy>
		          </releases>
		          <snapshots>
		            <enabled>true</enabled>
		            <updatePolicy>always</updatePolicy>
		            <checksumPolicy>warn</checksumPolicy>
		          </snapshots>
		          <url>http://${env.ARCHIVA_PORT_8080_TCP_ADDR}:${env.ARCHIVA_PORT_8080_TCP_PORT}/repository/extensions</url>
		          <layout>default</layout>
		        </repository>
      		</repositories>
		</profile>
	</profiles>

	<activeProfiles>
    	<activeProfile>agility</activeProfile>
  	</activeProfiles>
</settings>
